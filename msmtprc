# Accounts will inherit settings from this section
defaults
auth             on
tls              on
tls_trust_file   /etc/ssl/certs/Verisign_Class_3_Public_Primary_Certification_Authority_-_G2.pem

# A first gmail address
account        cern
auth           login
host           smtp.cern.ch
port           587
from           samr@cern.ch
user           samr
password       CUDDLES

account        gmail
tls_trust_file /usr/share/ca-certificates/mozilla/Equifax_Secure_CA.crt
host           smtp.gmail.com
port           587
from           hyp3rfunk@gmail.com
user           hyp3rfunk@gmail.com
password       CUDDLES

# Set a default account
account default : cern
