# Sample minimal config file.  Copy this to ~/.offlineimaprc and edit to
# suit to get started fast.


# crontab line below
# */5 * * * * exec /home/hyper/bin/start_daemon -n19 -c2 -p7 python2 /usr/bin/offlineimap -u quiet


[general]
metadata = ~/.offlineimap
accounts = CERN, gmail
maxsyncaccounts = 1
# Basic         -- Noninteractive interface suitable for cron'ing
# Blinkenlights -- A fancy (terminal) interface
ui = Blinkenlights
ignore-readonly = no

[ui.Curses.Blinkenlights]
# Character used to indicate thread status.
statuschar = .

[Account CERN]
localrepository = cern-local
remoterepository = cern-remote
autorefresh = 1
quick = 10

[Account gmail]
localrepository = gmail-local
remoterepository = gmail-remote
autorefresh = 1
quick = 10

# CERN
[Repository cern-local]
type = Maildir
localfolders = ~/Mail/CERN

[Repository cern-remote]
type = IMAP
ssl = yes
# remoteport = 993
remotehost = smtp.cern.ch
remoteuser = samr
remotepass = CUDDLES
keepalive = 60
subscribedonly = no
readonly = False

# GMAIL
[Repository gmail-local]
type = Maildir
localfolders = ~/Mail/gmail

[Repository gmail-remote]
type = Gmail
type = Gmail 
remoteuser = hyp3rfunk@gmail.com
remotepass = CUDDLES
realdelete = no
# "[Gmail]/Some Folder" --> some_folder
nametrans = lambda folder: re.sub('^inbox$', 'INBOX',
                           re.sub(' +', '_',
                           re.sub(r'.*/(.*)$', r'\1', folder).lower()))

[mbnames]
enabled = yes
filename = ~/.mutt/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"

# vim: ft=cfg tw=0
